@page
@model Reviews.CreateModel
@{
    ViewData["Title"] = "Add Review";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            padding: 20px;
        }

        form {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
            max-width: 350px;
            margin: auto;
            text-align: center;
        }

        div {
            margin-bottom: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        textarea {
            resize: vertical;
            height: 100px;
        }

        input[type="submit"] {
            background-color: #5cb85c;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 12px;
            cursor: pointer;
            margin-top: 10px;
        }

            input[type="submit"]:hover {
                background-color: #4cae4c;
            }
    </style>
    <script>
        function validateForm(event) {
            const title = document.querySelector('input[name="Review.Title"]').value.trim();
            const category = document.querySelector('input[name="Review.Category"]').value.trim();
            const reviewText = document.querySelector('textarea[name="Review.ReviewText"]').value.trim();
            const rating = document.querySelector('input[name="Review.Rating"]').value;
            const dateReviewed = document.querySelector('input[name="Review.DateReviewed"]').value;

            if (!title || !category || !reviewText || !rating || !dateReviewed) {
                event.preventDefault(); // Prevent form submission
                alert('Please fill out all fields before submitting.');
            }
        }
    </script>
</head>
<body>

    <h1>Add Review</h1>
    <form method="post" onsubmit="validateForm(event)">
        <div>
            <label asp-for="Review.Title">Title:</label>
            <input asp-for="Review.Title" type="text" />
        </div>
        <div>
            <label asp-for="Review.Category">Category:</label>
            <input asp-for="Review.Category" type="text" />
        </div>
        <div>
            <label asp-for="Review.ReviewText">Review Text:</label>
            <textarea asp-for="Review.ReviewText"></textarea>
        </div>
        <div>
            <label asp-for="Review.Rating">Rating:</label>
            <input asp-for="Review.Rating" type="number" min="1" max="5" />
        </div>
        <div>
            <label asp-for="Review.DateReviewed">Date Reviewed:</label>
            <input asp-for="Review.DateReviewed" type="date" />
        </div>
        <div>
            <input type="submit" value="Add Review" />
        </div>
    </form>

</body>
</html>
